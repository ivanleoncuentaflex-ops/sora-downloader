{
  "manifest_version": 3,
  "name": "Sora Video Downloader",
  "version": "1.0",
  "description": "Descarga videos de Sora f√°cilmente",
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "https://sora.chatgpt.com/*",
    "https://videos.openai.com/*",
    "https://*.blob.core.windows.net/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://sora.chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
